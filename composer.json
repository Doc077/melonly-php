{
    "name": "melonly/melonly",
    "type": "project",
    "description": "Melonly PHP Framework",
    "keywords": ["melonly", "mvc", "framework"],
    "license": "MIT",
    "authors": [
        {
            "name": "Dominik Rajkowski",
            "email": "dom.rajkowski@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "intervention/image": "^2.7",
        "nesbot/carbon": "^2.55",
        "ramsey/uuid": "^4.2",
        "twig/twig": "^3.3",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "nunomaduro/termwind": "^1.3"
    },
    "suggest": {
        "ably/ably-php": "Ably WebSocket driver",
        "pusher/pusher-php-server": "Pusher WebSocket driver"
    },
    "config": {
        "vendor-dir": "plugins/",
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Melonly\\": "melonly/",
            "App\\": "src/",
            "Database\\": "database/",
            "Tests\\": "tests/"
        },
        "files": [
            "melonly/Support/constants.php",
            "melonly/Support/helpers.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('melonly/Config/Assets/.env.base', '.env');\"",
            "php -r \"copy('melonly/Database/Assets/migration-list.php', 'storage/migrations/list.php');\""
        ],
        "post-create-project-cmd": [
            "php -r \"file_put_contents('.env', str_replace('ENCRYPT_KEY=', 'ENCRYPT_KEY=' . bin2hex(random_bytes(16)), file_get_contents('.env')));\""
        ]
    }
}
